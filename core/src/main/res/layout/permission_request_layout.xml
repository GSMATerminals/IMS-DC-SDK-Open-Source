<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_dialog_background"
    android:layout_marginStart="@dimen/common_sheet_dialog_start_end"
    android:layout_marginEnd="@dimen/common_sheet_dialog_start_end"
    android:maxHeight="@dimen/request_panel_max_height">

    <TextView
        android:id="@+id/request_permission_panel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        android:textColor="@color/black_alpha_90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/permission_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_permission_panel_title"
        app:layout_constraintBottom_toTopOf="@id/permission_ok_button"
        app:layout_constrainedHeight="true"
        android:layout_marginStart="@dimen/common_margin_start_end"
        android:layout_marginEnd="@dimen/common_margin_start_end"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/permission_ok_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/ok_btn"
        android:gravity="center"
        android:textColor="@color/white_alpha_90"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/permission_cancel_button"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/permission_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:text="@string/cancel_btn"
        android:textSize="16sp"
        android:textColor="@color/permission_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
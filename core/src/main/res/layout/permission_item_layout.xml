<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/permission_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/common_margin_start_end"
        android:layout_marginEnd="@dimen/common_margin_start_end"
        android:textColor="@color/black_alpha_90"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/permission_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/common_margin_start_end"
        android:layout_marginEnd="@dimen/common_margin_start_end"
        android:textSize="12sp"
        android:textColor="@color/black_alpha_60"
        app:layout_constraintTop_toBottomOf="@id/permission_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/permission_item_request_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="@dimen/common_margin_start_end"
        android:layout_marginEnd="@dimen/common_margin_start_end"
        android:textColor="@color/permission_blue"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/permission_item_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>